<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="BackgroundAddUser" fx:controller="org.example.rmsproject.UserManagement.AddUserController"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="1024.0" prefWidth="1440.0" style="-fx-background-color: #004332;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Page Title -->
        <Label fx:id="PageTitle" layoutX="149.0" layoutY="30.0" text="  User Management" textFill="#c0a159">
            <font>
                <Font name="System Bold" size="45.0" />
            </font>
        </Label>
        <!-- Line Under Title -->
        <Line fx:id="LineUnderTitle" endX="1299.0" layoutX="149.0" layoutY="93.0" startX="-150.0" />

        <!-- Add User Section Title -->
        <Label fx:id="SectionTitle" layoutX="54.0" layoutY="117.0" text="Add User" textFill="#c0a159">
            <font>
                <Font name="System Bold" size="40.0" />
            </font>
        </Label>

        <!-- Name Field -->
        <Label fx:id="NameLabel" layoutX="55.0" layoutY="250.0" text="Name" textFill="#c0a159">
            <font>
                <Font size="30.0" />
            </font>
        </Label>
        <TextField fx:id="nameField" layoutX="250.0" layoutY="245.0" prefHeight="50.0" prefWidth="400.0" />

        <!-- Rating Field -->
        <Label fx:id="RatingLabel" layoutX="55.0" layoutY="350.0" text="Rating" textFill="#c0a159">
            <font>
                <Font size="30.0" />
            </font>
        </Label>
        <TextField fx:id="ratingField" layoutX="250.0" layoutY="345.0" prefHeight="50.0" prefWidth="400.0" />

        <!-- Image Selection Section -->
        <Label fx:id="ImagePathLabel" layoutX="55.0" layoutY="450.0" text="Image" textFill="#c0a159">
            <font>
                <Font size="30.0" />
            </font>
        </Label>
        <Label fx:id="imageLabel" layoutX="250.0" layoutY="450.0" text="No file selected" textFill="#ffffff">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <Button fx:id="selectImageButton" layoutX="250.0" layoutY="490.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0"
                style="-fx-background-color: #630C2F;" text="Choose File" textFill="WHITE" onAction="#handleSelectImageButton">
            <font>
                <Font size="16.0" />
            </font>
        </Button>

        <!-- Save Button -->
        <Button fx:id="saveUserButton" layoutX="364.0" layoutY="705.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="144.0"
                style="-fx-background-color: #630C2F;" text="Save" textFill="WHITE" onAction="#handleSaveUserButton">
            <font>
                <Font size="19.0" />
            </font>
        </Button>

        <!-- Cancel Button -->
        <Button fx:id="cancelButton" layoutX="861.0" layoutY="706.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="144.0"
                style="-fx-background-color: #630C2F;" text="Cancel" textFill="WHITE" onAction="#handleCancelButton">
            <font>
                <Font size="19.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
