<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="1024.0" prefWidth="1440.0" style="-fx-background-color: #003B27;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.rmsproject.Controllers.RegisterationControllers.resetPassword">
   <Label layoutX="620.0" layoutY="150.0" text="Reset Password" textFill="#c0a159">
      <font>
         <Font name="System Bold Italic" size="36.0" />
      </font>
   </Label>

   <PasswordField fx:id="newPasswordField" layoutX="570.0" layoutY="350.0" prefHeight="40.0" prefWidth="300.0" promptText="New Password" style="-fx-font-size: 14px;" />

   <PasswordField fx:id="confirmPasswordField" layoutX="570.0" layoutY="420.0" prefHeight="40.0" prefWidth="300.0" promptText="Confirm New Password" style="-fx-font-size: 14px;" />

   <Button layoutX="610.0" layoutY="500.0" mnemonicParsing="false" onAction="#changePassword" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #630C2F;" text="Change Password" textFill="#c0a159" />

   <Button fx:id="homeButton" layoutX="50.0" layoutY="50.0" mnemonicParsing="false" onAction="#goToHomePage" prefHeight="45.0" prefWidth="140.0" style="-fx-background-color: #B89555;" text="Home" textFill="#630c2f" />
</AnchorPane>
