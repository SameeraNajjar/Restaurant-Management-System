<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #004332;" fx:controller="org.example.rmsproject.Controllers.OrderControllers.OrderDetailsController">

    <children>
        <Text text="Order Details" layoutX="50.0" layoutY="60.0" fill="#b89555" style="-fx-font-weight: bold;">
            <font>
                <Font size="36.0" />
            </font>
        </Text>

        <GridPane fx:id="gridPane" layoutX="100.0" layoutY="300.0" prefWidth="600.0" prefHeight="400.0"
                  AnchorPane.leftAnchor="400.0" AnchorPane.rightAnchor="400.0" AnchorPane.bottomAnchor="170" AnchorPane.topAnchor="170"
                  style="-fx-background-color: #d3d3d3; -fx-border-color: #b89555; -fx-border-width: 2; -fx-border-radius: 5 30 30 5; -fx-background-radius: 5 30 30 5;">

            <columnConstraints>
                <ColumnConstraints percentWidth="20.0" />
                <ColumnConstraints percentWidth="7.0" />
                <ColumnConstraints percentWidth="66.0" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints percentHeight="16.66" />
                <RowConstraints percentHeight="16.66" />
                <RowConstraints percentHeight="16.66" />
                <RowConstraints percentHeight="16.66" />
                <RowConstraints percentHeight="16.66" />
                <RowConstraints percentHeight="16.66" />
            </rowConstraints>

            <Text text="Order id" GridPane.rowIndex="0" GridPane.columnIndex="0" fill="#b89555" style="-fx-font-weight: bold;" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                <font>
                    <Font size="16.0" />
                </font>
            </Text>
            <Text text="Customer Name" GridPane.rowIndex="1" GridPane.columnIndex="0" fill="#b89555" style="-fx-font-weight: bold;" GridPane.halignment="CENTER" GridPane.valignment="CENTER" wrappingWidth="85.0">
                <font>
                    <Font size="16.0" />
                </font>
            </Text>
            <Text text="Item(s)" GridPane.rowIndex="2" GridPane.columnIndex="0" fill="#b89555" style="-fx-font-weight: bold;" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                <font>
                    <Font size="16.0" />
                </font>
            </Text>
            <Text text="Special Instructions" GridPane.rowIndex="3" GridPane.columnIndex="0" fill="#b89555" style="-fx-font-weight: bold;" GridPane.halignment="CENTER" GridPane.valignment="CENTER" wrappingWidth="90.0">
                <font>
                    <Font size="16.0" />
                </font>
            </Text>
            <Text text="Status" GridPane.rowIndex="4" GridPane.columnIndex="0" fill="#b89555" style="-fx-font-weight: bold;" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                <font>
                    <Font size="16.0" />
                </font>
            </Text>
            <Text text="Total Price" GridPane.rowIndex="5" GridPane.columnIndex="0" fill="#b89555" style="-fx-font-weight: bold;" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                <font>
                    <Font size="16.0" />
                </font>
            </Text>

            <Line fx:id="verticalLine" startX="0.0" startY="0.0" endX="0.0" endY="400.0" GridPane.columnIndex="1" GridPane.rowSpan="6"
                  style="-fx-stroke: #b89555; -fx-stroke-width: 2;" />

            <Text fx:id="orderIdText" text="" GridPane.rowIndex="0" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER" >
                <font>
                    <Font size="14.0" />
                </font>
            </Text>
            <Text fx:id="customerNameText" text="" GridPane.rowIndex="1" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER" >
                <font>
                    <Font size="14.0" />
                </font>
            </Text>
            <Text fx:id="itemsText" text="" GridPane.rowIndex="2" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER" >
                <font>
                    <Font size="14.0" />
                </font>
            </Text>
            <Text fx:id="specialInstructionsText" text="" GridPane.rowIndex="3" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER" >
                <font>
                    <Font size="14.0" />
                </font>
            </Text>
            <Text fx:id="statusText" text="" GridPane.rowIndex="4" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER" >
                <font>
                    <Font size="14.0" />
                </font>
            </Text>
            <Text fx:id="totalPriceText" text="" GridPane.rowIndex="5" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER" >
                <font>
                    <Font size="14.0" />
                </font>
            </Text>
        </GridPane>

        <Button fx:id="backButton" text="Back" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="50.0"
                prefWidth="100.0" prefHeight="40.0"
                style="-fx-background-color: #8B0000; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;">
            <font>
                <Font size="14.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
